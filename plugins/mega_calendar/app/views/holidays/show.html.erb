<style>
  .h-table {
    width: 300px;
  }

  .h-body tr td:first-child{
    font-weight: bold;
  }
</style>

<h1><%= translate 'holiday' %></h1>
<%
  user = @holiday.user.login rescue ''
%>
<table class="h-table">
  <tbody class="h-body">
    <tr>
      <td><label><%= translate 'user' %></label></td>
      <td><%= user %></td>
    </tr>
    <tr>
      <td><label><%= translate 'start' %></label></td>
      <td><%= @holiday.start.blank? ? '' : format_date(@holiday.start.to_date) %></td>
    </tr>
    <tr>
      <td><label><%= translate 'end' %></label></td>
      <td><%= @holiday.end.blank? ? '' : format_date(@holiday.end.to_date) %></td>
    </tr>
  </tbody>
</table>
<br/>
<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/edit?id=<%= @holiday.id.to_s %>"><%= translate 'edit' %></a>
<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/destroy?id=<%= @holiday.id.to_s %>"><%= translate 'destroy' %></a>
<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/index"><%= translate 'list' %></a>
